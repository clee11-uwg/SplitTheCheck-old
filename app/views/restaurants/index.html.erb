<p id="notice"><%= notice %></p>

<h1>All Restaurants</h1>

<%= search_field_tag :search, params[:search], placeholder: "Search", class: "form-control" %>
<%= button_tag "Search", :name => nil%>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Will Split</th>
      <th>Won't Split</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">
        <td><%= link_to restaurant.name, restaurant %></td>
        <td><%= restaurant.address %>, <%= restaurant.city %>, <%= restaurant.state %></td>
        <td><%= restaurant.upVoteCount %></td>
        <td><%= restaurant.downVoteCount %></td>
        <td><%= link_to 'Add Will Split Vote', up_vote_path(restaurant.id), method: 'put' %></td>
        <td><%= link_to "Add Won't Split Vote", restaurants_path_path %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
